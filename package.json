{
  "name": "@shopify/react-i18n",
  "version": "0.0.1",
  "description": "Handle translations and formatting for different locales with support for asynchronous fetching and pseudolocalization.",
  "main": "lib/index.js",
  "author": "Chris Sauve",
  "license": "MIT",
  "private": false,
  "scripts": {
    "lint:prettier": "yarn run prettier './**/*.json' --list-different",
    "lint:eslint": "yarn run eslint . --max-warnings 0 --ext js --ext jsx --ext ts --ext tsx",
    "lint": "yarn run lint:eslint && yarn run lint:prettier",
    "format:prettier": "yarn run prettier './**/*.json' --write",
    "format:eslint": "yarn run lint:eslint --fix",
    "format": "yarn run format:prettier && yarn run format:eslint",
    "clean": "rm -rf lib",
    "prebuild": "yarn run clean",
    "build": "tsc --project config/typescript/build.json",
    "type-check": "tsc --noEmit",
    "test": "jest --config ./config/jest/config.json",
    "test:watch": "yarn run test --watch"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.9",
    "@types/jest": "^22.1.3",
    "@types/react-dom": "^16.0.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.18.1",
    "eslint-plugin-shopify": "^19.0.0",
    "intl": "^1.2.5",
    "intl-pluralrules": "^0.1.0",
    "jest": "^22.4.2",
    "prettier": "^1.10.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "ts-jest": "^22.0.4",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "@shopify/react-utilities": "^1.2.0",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.38",
    "hoist-non-react-statics": "^2.5.0",
    "prop-types": "^15.6.0"
  }
}
